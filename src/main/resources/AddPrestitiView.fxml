<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="250.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homepage.AddPrestitiController" stylesheets="@style.css">
    
    <top>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Registra Nuovo Prestito" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </Label>
    </top>

    <center>
        <VBox alignment="TOP_CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            
            <GridPane hgap="10.0" vgap="20.0">
                
                <Label text="Utente (ID/Matricola):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="utenteField" promptText="Inserisci ID o Matricola Utente" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="250.0" />

                <Label text="Libro (ISBN/ID):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="libroField" promptText="Inserisci ISBN o ID Libro" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            </GridPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            
            <Button fx:id="confermaButton" mnemonicParsing="false" onAction="#handleConferma" prefWidth="100.0" text="Conferma" styleClass="primary-button" />
            <Button fx:id="annullaButton" mnemonicParsing="false" onAction="#handleAnnulla" prefWidth="100.0" text="Annulla" />
        </HBox>
    </bottom>
</BorderPane>