<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homepage.HomePageController">
    <bottom>
        <HBox fx:id="buttonHBox" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    
            <Button fx:id="utentiButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#visualizzaUtenti" text="Visualizza Utenti" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
    
            <Button fx:id="libriButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#visualizzaLibri" text="Visualizza Libri" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
    
            <Button fx:id="prestitiButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#visualizzaPrestiti" text="Visualizza Prestiti" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
    
        </HBox>
    </bottom>
   <top>
          <MenuBar BorderPane.alignment="CENTER">
              <menus>
                  <Menu mnemonicParsing="false" text="File">
                      <items>
                          <MenuItem fx:id="saveButton" mnemonicParsing="false" onAction="#saveFile" text="Salva" />
                          <MenuItem fx:id="openButton" mnemonicParsing="false" onAction="#openFile" text="Apri" />
                      </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Edit">
                      <items>
                          <MenuItem mnemonicParsing="false" text="Delete" />
                      </items>
                  </Menu>
              </menus>
          </MenuBar>
   </top>
   <center>
      <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@OIP-3862377954.jpg" />
         </image>
      </ImageView>
   </center>
</BorderPane>
